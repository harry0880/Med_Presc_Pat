<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.med_presc_pat.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        app:ms_floatingLabelColor="#303F9F"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"

        android:hint="Name of Doctor"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_floatingLabelColor="#303F9F"
        app:met_floatingLabel="highlight"
        android:inputType="date"
        android:hint="Date Of Birth"

        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_floatingLabelColor="#303F9F"
        app:met_floatingLabel="highlight"
        android:inputType="textEmailAddress"
        android:hint="Email Id"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        app:ms_floatingLabelColor="#303F9F"
        android:inputType="phone"
        android:hint="Contact"
        android:paddingTop="10dp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etAddres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_floatingLabelColor="#303F9F"
        app:met_floatingLabel="highlight"
        android:inputType="textPostalAddress"
        android:hint="Address"
          android:paddingTop="10dp"/>


    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spState"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:ms_multiline="false"
        app:ms_hint="Select State"
        app:ms_enableFloatingLabel="true"
        app:ms_enableErrorLabel="false"
        app:ms_floatingLabelText="State"
        app:ms_floatingLabelColor="#303F9F"
        app:ms_thickness="2dp"
        app:ms_arrowSize="16dp"
        app:ms_alignLabels="false"
        android:paddingTop="10dp"
        />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spDistrict"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:ms_multiline="false"
        app:ms_hint="Select District"
        app:ms_enableFloatingLabel="true"
        app:ms_enableErrorLabel="false"
        app:ms_floatingLabelColor="#303F9F"
        app:ms_floatingLabelText="District"
        app:ms_thickness="2dp"
        app:ms_arrowSize="16dp"
        app:ms_alignLabels="false"
        android:paddingTop="10dp"
        />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_focusColor="@color/colorPrimary"
            fancy:fb_fontIconResource="&#xf04b;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Submit"
            fancy:fb_textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
</LinearLayout>
    </ScrollView>
